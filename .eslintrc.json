{
  "extends": "google",
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true

  },
  "ecmaFeatures": {
    "modules": true,
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "object-curly-spacing": [2, "always"],
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": false,
        "MethodDefinition": false,
        "ClassDeclaration": false,
        "ArrowFunctionExpression": false
      }
    }],
    "max-len": ["error", 160]
  }
}
